{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/LobsterMan/pensieve/main/schema/recipe/0.1.0",
    "pensieve":
    {
        "coreVersion": "0.1.0",
        "type": "recipe",
        "version": "1.0.0",
        "title": "Recipe Type Schema",
        "description": "Recipes with YAML + Markdown sections"
    },
    "frontmatterSchema":
    {
        "type": "object",
        "required": ["type", "pensive_schema", "title"],
        "properties": {
            "type": { "const": "recipe" },
            "pensive_schema": { "type": "string", "format": "uri" },
            "title": { "type": "string" },
            "date": { "type": "string", "format": "date" },
            "source": { "type": "string", "format": "uri" },
            "tags": {
                "type": "array",
                "items": { "type": "string" }
            },
            "servings": { "type": "string" },
            "prep_time": { "type": "string" },
            "cook_time": { "type": "string" },
            "total_time": { "type": "string" }
        }
    },
    "bodyRules":
    {
        "strictness": "medium",
        "requiredHeadings":
        [
            {
                "text": "Ingredients",
                "level": 2,
                "expects": "ul"
            },
            {
                "text": "Directions",
                "level": 2,
                "expects": "ol"
            }
        ]
    },
    "styling":
    {
        "css":
        {
            "main": "./style.css"
        }
    },
    "mcp":
    {
        "capabilities":
        [
            "read",
            "create",
            "update",
            "search"
        ],
        "actions":
        [
            {
                "name": "add_ingredient",
                "input":
                {
                    "ingredient": "string"
                },
                "behavior": "Append bullet under ## Ingredients"
            }
        ]
    },
    "renderHints":
    {
        "toc": false,
        "callouts": true
    }
}